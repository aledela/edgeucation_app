<p><%= link_to "Back", new_search_path %></p>

<center>
  <h3>Search Results</h3>
  <% if @search.search_colleges.empty? %>
    <p>No Institutions matching the filters were found.</p>
  <% else %>
  <table>
    <thead>
      <tr>
          <th>Institutions</th>
          <th>Zip code</th>
          <th>Cost of Attendence</th>
          <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
        <% @search.search_colleges.each do |college| %>
        <tr>
          <td><%= college.coll_name %></td>
          <td><%= college.zip_code %></td>
          <td><%= college.cost_att %></td>
          <td><%= link_to 'Show', college %></td>
        </tr>
        <% end %>
    </tbody>
  </table>
</center>
<% end %>